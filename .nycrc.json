{
  "all": true,
  "include": [
    "apps/web/app/**/*.{ts,tsx}",
    "apps/web/components/**/*.{ts,tsx}",
    "apps/web/lib/**/*.{ts,tsx}",
    "packages/*/src/**/*.{ts,tsx}"
  ],
  "exclude": [
    "**/*.test.{ts,tsx}",
    "**/*.spec.{ts,tsx}",
    "**/test/**",
    "**/tests/**",
    "**/__tests__/**",
    "**/node_modules/**",
    "**/dist/**",
    "**/coverage/**",
    "**/.next/**",
    "**/build/**",
    "**/*.config.{js,ts}",
    "**/*.d.ts"
  ],
  "reporter": ["text", "lcov", "html"],
  "branches": 80,
  "lines": 80,
  "functions": 80,
  "statements": 80,
  "check-coverage": true,
  "watermarks": {
    "lines": [80, 95],
    "functions": [80, 95],
    "branches": [80, 95],
    "statements": [80, 95]
  }
}
