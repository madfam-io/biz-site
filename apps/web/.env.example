# Database
DATABASE_URL="postgresql://user:password@localhost:5432/madfam_db?schema=public"

# Authentication
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# Email Service (Resend)
RESEND_API_KEY="re_xxxxxxxxxxxx"
RESEND_FROM_EMAIL="hello@madfam.io"

# Analytics
NEXT_PUBLIC_PLAUSIBLE_DOMAIN="madfam.io"
PLAUSIBLE_API_KEY="your-plausible-api-key"

# External APIs
OPENAI_API_KEY="sk-xxxxxxxxxxxx"
CLEARBIT_API_KEY="sk_xxxxxxxxxxxx"

# n8n Integration
N8N_WEBHOOK_URL="https://n8n.madfam.io/webhook"
N8N_API_KEY="your-n8n-api-key"

# Feature Flags
NEXT_PUBLIC_ENV="development"
NEXT_PUBLIC_FEATURE_FLAGS_ENABLED="true"

# Sentry Error Tracking
SENTRY_DSN="https://xxxxxxxxxxxx@sentry.io/xxxxxxxxxxxx"
NEXT_PUBLIC_SENTRY_DSN="https://xxxxxxxxxxxx@sentry.io/xxxxxxxxxxxx"

# Cloudflare
CLOUDFLARE_ZONE_ID="xxxxxxxxxxxx"
CLOUDFLARE_API_TOKEN="xxxxxxxxxxxx"

# Redis Cache (Upstash)
REDIS_URL="redis://default:xxxxxxxxxxxx@xxxxxxxxxxxx.upstash.io:6379"

# File Storage (Cloudinary)
CLOUDINARY_CLOUD_NAME="xxxxxxxxxxxx"
CLOUDINARY_API_KEY="xxxxxxxxxxxx"
CLOUDINARY_API_SECRET="xxxxxxxxxxxx"

# Google ReCAPTCHA
NEXT_PUBLIC_RECAPTCHA_SITE_KEY="xxxxxxxxxxxx"
RECAPTCHA_SECRET_KEY="xxxxxxxxxxxx"

# Slack Notifications
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/xxxxxxxxxxxx"

# API Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"