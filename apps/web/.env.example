# Environment Configuration
# Copy this file to .env.local and update with your values

# Environment: development | staging | production
NEXT_PUBLIC_ENV=development

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Analytics (Plausible.io)
# Get your domain from https://plausible.io
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=localhost

# Feature Flags (optional)
# Control which features are enabled
NEXT_PUBLIC_FEATURE_NEW_LEAD_SCORING=false
NEXT_PUBLIC_FEATURE_INTERACTIVE_CALCULATOR=true
NEXT_PUBLIC_FEATURE_CHAT_SUPPORT=false
NEXT_PUBLIC_FEATURE_PORTUGUESE_LOCALE=false

# n8n Workflow Integration (optional)
# Webhook URL for lead processing automation
N8N_WEBHOOK_URL=

# API Security (for protected endpoints)
# Generate a secure random string
API_SECRET=

# Database URL (for production with Vercel)
# PostgreSQL connection string
DATABASE_URL=

# Email Service (future)
# SMTP or service provider credentials
EMAIL_HOST=
EMAIL_PORT=
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=noreply@madfam.io

# CMS Configuration (future)
# Payload CMS settings
PAYLOAD_SECRET=
PAYLOAD_EMAIL=
PAYLOAD_PASSWORD=

# External Services (optional)
# Various third-party integrations
CLOUDINARY_URL=
SLACK_WEBHOOK_URL=
SENTRY_DSN=